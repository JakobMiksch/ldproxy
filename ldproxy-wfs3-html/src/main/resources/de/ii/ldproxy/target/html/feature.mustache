<div {{{microdata}}}>
    {{#idAsUrl}}
        <h1 itemprop="name">{{name}}</h1>
        <link href="{{path}}./" {{{id.microdata}}}/>
        <link href="{{path}}./?f=html" itemprop="hasMap"/>
        {{#requestUrl}}
        <link href="{{.}}" itemprop="sameAs"/>
        {{/requestUrl}}
    {{/idAsUrl}}
    {{^idAsUrl}}
        <h4 class="mt-3 mb-1"><a href="{{#currentUrlWithSegment}}{{id.value}}{{/currentUrlWithSegment}}" {{{id.microdata}}}><span itemprop="name">{{name}}</span></a></h4>
    {{/idAsUrl}}
        {{#children}}
            {{> property}}
        {{/children}}
        {{#links}}
            <dl class="dl-horizontal dl-horizontal-no-space">
                <dt>{{name}}</dt>
            <dd>
                <ul class="list-unstyled">
                {{#children}}
                    <li>
                        <a href="{{value.value}}" target="_blank">{{value.name}}</a>
                    </li>
                {{/children}}
                    </ul>
            </dd>
            </dl>
        {{/links}}
</div>
